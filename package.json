{
  "name": "quickhull3d",
  "version": "2.0.0",
  "description": "A quickhull implementation for 3d points",
  "homepage": "https://github.com/maurizzzio/quickhull3d",
  "author": {
    "name": "Mauricio Poppe",
    "email": "mauricio.poppe@gmail.com",
    "url": "http://maurizzzio.com"
  },
  "bugs": "https://github.com/maurizzzio/quickhull3d/issues",
  "main": "dist/index.js",
  "keywords": [
    "geometry",
    "3d",
    "convex hull",
    "quick hull",
    "quickhull"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "lint": "standard",
    "codecov": "npm run test:coverage -s && codecov < coverage/lcov.info",
    "postcodecov": "rimraf coverage",
    "test": "babel-tape-runner test | tap-spec",
    "test:debug": "DEBUG=quickhull,halfedge,face babel-tape-runner test | tap-spec",
    "test:coverage": "babel-node node_modules/.bin/isparta cover test/",
    "test:watch": "watch 'npm test' test lib",
    "prebuild": "npm run clean -s",
    "build": "babel lib --out-dir dist",
    "build:watch": "watch 'npm run build' lib",
    "preversion": "npm run lint -s && npm run test -s && npm run build -s",
    "postversion": "git push origin master --follow-tags",
    "deploy": "git pull --rebase origin master && git push origin master"
  },
  "standard": {
    "ignore": [
      "/dist"
    ]
  },
  "files": [
    "/dist"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maurizzzio/quickhull3d"
  },
  "dependencies": {
    "debug-fn": "^1.0.1",
    "get-plane-normal": "^1.0.0",
    "gl-vec3": "^1.0.3",
    "point-line-distance": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.2.0",
    "babel-core": "^6.2.1",
    "babel-plugin-add-module-exports": "^0.1.1",
    "babel-preset-es2015": "^6.1.18",
    "babel-tape-runner": "^1.3.0",
    "codecov.io": "^0.1.6",
    "isparta": "^4.0.0",
    "rimraf": "^2.4.4",
    "standard": "^5.4.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.2.2",
    "watch": "^0.16.0"
  }
}
